<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0" xmlns:android="http://schemas.android.com/apk/res/android" id="com.phonegap.parkoo" version="0.12.2" versionCode="1">

    <preference name="phonegap-version" value="cli-8.0.0" />
    <preference name="Orientation" value="portrait" />
    <preference name="Fullscreen" value="true" />
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="SplashMaintainAspectRatio" value="false" />
    <preference name="SplashShowOnlyFirstTime" value="true" />
	<preference name="android-minSdkVersion" value="20" />
    <plugin name="cordova-plugin-splashscreen" spec="~5.0.1" />
    <plugin name="cordova-plugin-geolocation" spec="~4.0.1" />
	


    <name>Parkoo Park Finder (BETA)</name>
    <description>
        !!!BETA VERSION!!! Still in test mode -Incomplete Data. Big plans for the future including: !a back button that works ~profiles ~ratings ~functioning maps ~location setter ~advanced search ~pagination
    </description>

    <author email="parkoo.staff@gmail.com" href="https://www.facebook.com/parkooparks">
        Parkoo Team
    </author>

    <content src="index.html" />


    <platform name="ios"></platform>

    <platform name="android">
	
        <icon src="images/Parkoo_Icon.png" platform="android" gap:qualifier="ldpi" />
        <icon src="images/Parkoo_Icon.png" platform="android" gap:qualifier="mdpi" />
        <icon src="images/Parkoo_Icon.png" platform="android" gap:qualifier="hdpi" />
        <icon src="images/Parkoo_Icon.png" platform="android" gap:qualifier="xhdpi" />
        <icon src="images/Parkoo_Icon.png" platform="android" gap:qualifier="xxhdpi" />
        <icon src="images/Parkoo_Icon.png" platform="android" gap:qualifier="fr-xxhdpi" />
        <splash src="splash.png" density="port-ldpi" />
        <splash src="splash.png" density="port-hdpi" />
        <splash src="splash.png" density="port-mdpi" />
        <splash src="splash.png" density="port-xhdpi" />

    </platform>

    <plugin name="cordova-plugin-dialogs" spec="~2.0.1" />
    <plugin name="cordova-plugin-device" spec="~2.0.1" />
    <plugin name="cordova-plugin-whitelist" spec="~1.3.3" />
    <access origin="*" subdomains="true" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="*.google.com" />
    <allow-intent href="*.googleapis.com" />
    <allow-intent href=" *.gstatic.com " />

    <!--allows access to resources like "dialer ", sms, geolocation, android market or iTunes store.-->
    <platform name="android ">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios ">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>

    <preference name="android-minSdkVersion " value="21" />


</widget>
