<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0" id="com.phonegap.parkoo" version="0.2.0" versionCode="1">

    <plugin name="cordova-plugin-whitelist" source="npm" spec="1.1.0" />
    <allow-navigation href="*" />
    <allow-intent href="*" />
    <preference name="phonegap-version" value="cli-7.0.1" />
    <preference name="Orientation" value="portrait" />

    <access origin="*"></access>

    <name>Parkoo Park Finder (BETA)</name>
    <content src="index.html" />

    <platform name="android">
        <icon src="images/Parkoo_Icon.png" platform="android" qualifier="ldpi" />
        <icon src="images/Parkoo_Icon.png" platform="android" qualifier="mdpi" />
        <icon src="images/Parkoo_Icon.png" platform="android" qualifier="hdpi" />
        <icon src="images/Parkoo_Icon.png" platform="android" qualifier="xhdpi" />
        <icon src="images/Parkoo_Icon.png" platform="android" qualifier="xxhdpi" />
        <icon src="images/Parkoo_Icon.png" platform="android" qualifier="fr-xxhdpi" />
        <splash src="splash.png" density="port-hdpi" />
        <splash src="splash.png" density="port-ldpi" />
        <splash src="splash.png" density="port-mdpi" />
        <splash src="splash.png" density="port-xhdpi" />
    </platform>

    <preference name="SplashScreenDelay" value="10000" />
    <preference name="AutoHideSplashScreen" value="false" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="SplashShowOnlyFirstTime" value="false" />

    <description>
        <h3 style="color:#005406;">!!!BETA VERSION!!!</h3>
        <h3><strong>Still in test mode </strong></h3>
        <ul>
            <li>Incomplete Data</li>
            <li>Social Media accounts are yet to be activated</li>
            <li>Big plans for the future including:</li>
        </ul>
        <ul>
            <li>profiles</li>
            <li>ratings</li>
            <li>functioning maps</li>
            <li>stronger, more focused search capabilities</li>
            <li>and maybe more depending on the feedback we receive.. </li>
        </ul>
    </description>

    <author email="parkoo.staff@gmail.com">
        Noah Hebert
    </author>

</widget>
